<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Sport Tracker", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          
          <li><%= link_to "Help", help_path %></li>
          <% if signed_in? %>
            <% if current_user.admin?%>
              <li><%= link_to "Users", users_path %></li>
             <% end %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
     
    </div>
  </div>

  <div class="navbar-inner">
    <div class="container">
     
      <nav>
        <ul class="nav nav-tabs">
          <% if signed_in? %>
            <li><%= link_to root_path do %>
              <i class="icon-home icon-white"></i> Home
            <% end %></li>
           
           <li><%= link_to training_path do %>
              <i class="icon-certificate icon-white"></i> Training
            <% end %></li>


            <li><%= link_to statistic_path do %>
              <i class="icon-signal icon-white"></i> Statistics
            <% end %></li>
           
          

            <li><%= link_to users_path do %>
              <i class="icon-user icon-white"></i> Friends
            <% end %></li>
           

            <li><%= link_to calendar_path do %>
              <i class="icon-calendar icon-white"></i> Calendar
            <% end %></li>

            <li><%= link_to competitions_path do %>
              <i class="icon-flag icon-white"></i> Competitions
            <% end %></li>

          <% end %>
        </ul>
      </nav>
     
    </div>
  </div>
</header>

